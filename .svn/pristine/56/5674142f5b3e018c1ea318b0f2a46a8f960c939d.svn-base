page-load {
    ion-content{
        .btnload{
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            vertical-align: middle;
        }
        .icontext{
            width: 100%;
            text-align: center;
            margin-bottom: 35%;
            ion-spinner{
                margin: 3%;
            }
            button{
                margin-top: 15%;
            }
            .tel{
                margin: 0 auto; 
                color: #888;
                font-size: 1.6rem;
                line-height: 3rem
            }
            .text{
                // width: 30rem;
                padding: 5%;
                font-size: 1.8rem;
                color: #0299fe;
                margin: 0 auto;
            }
        }
        ion-spinner svg {
            position: absolute;
            top: 0;
            left: 0;
            width: 120%;
            height: 120%;
            border-radius: 30%;
            -webkit-transform: translateZ(0);
            transform: translateZ(0);
        }
        .spinner-ios-dots circle {
        fill: #0299fe;
        }
        .spinner-md-dots circle {
        fill: #0299fe;
        }
    }
}
