page-topup {
  * {
    box-sizing: content-box;
    font-family: $font-family;
  }
  //弹窗按钮样式
  .alertbuttn{
    background-color: #0299fe;
    color: white;
    text-align: center;
    margin: 0 auto;
  }
  .card-header {
    border-bottom: 1px solid #93CBED;
    height: 70%;
    flex-wrap: nowrap;

    .card-number {
      position: relative;
      background: url("../../assets/icon/Order/card.png") no-repeat;
      background-size: 100% 100%;
      color: #0299fe;
      margin-top: 4%;
      margin-bottom: 4%;
      padding: 3%;
    }

    .card-img {
      position: absolute;
      width: 3rem;
      left: 8%;
      top: 68%;
    }

    .card-iccid {
      border:  1px solid #0299fe;
      border-radius: 10px;
      height: 100%;
      margin-left: 35%;
      padding: 0 12%;
      display: flex;
      justify-content: center;
      align-items: center;
      .iccid-text {
        width: 90%;
        font-size: 1.5rem;
      }
    }
    .flow-col {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .flow-content {
      text-align: center;
      .name-label {
        color: #0299fe;
        font-size: 1.6rem;
        // letter-spacing: 1px;
        span {
          color: #f4910e;
          font-size: 2.2rem;
          font-weight: 600;
        }
      }

      .sale-price {
        text-decoration: line-through;
        color: #949494;
      }
    }


  }


  ion-row{
    margin: 1rem;
  }
  .ordercss  {
    border: 1px solid #15a6ff;
    height: 8rem;
    background: url("../../assets/icon/Order/blue.png") bottom no-repeat;
    background-size: 100%;
    width: 25%;
    flex-grow: 0;
    flex-basis: 41.8%;
    margin: 1% 2% 1% 2%;
  }
  ion-col ion-label {
    text-align: center;
    margin: 0px;
  }
  .colable{
    color: white;
  }
  //.col{
  //  margin: 0.5rem;
  //  flex-basis: 144px;
  //  flex-grow: 0;
  //}
  .label{
    margin: 0px 2px 10px 0;
    font-size: 1.3rem;
  }

  h5{
    font-size: 16px;
    color:#49B7FE;
    margin-left: 3%;
    padding-top: 5%;
  }
  h5 span{
    color:#FF791F;
  }
  .button{
    background-color:#15A6FF;
    width: 78%;
    margin-left: 11%;
  }
  .rowtime {
    width:100%;
    color: #9f0000;
    font-size: 1.3rem;
    padding: 0% 2% 0% 2% ;
    text-align: center;
    margin-top: 0.5rem;
  }

  .coltime {
    text-align: center;
    background-color: white;
    border-radius: 8px;
    flex-basis: 12px;
    flex-grow: 0;
  }

  .scroll-content {
    margin-top: 133px;
  }
  .title_top{  
     font-size: 1.6rem;
     line-height: 2.7rem;
     height: 2.5rem;
     color:#666;
     padding-left: 5%;
     border-left: 3px solid #15A6FF;
     border-bottom: 1px solid rgb(240, 240, 240);  
  }
  .header-md::after, .tabs-md[tabsPlacement="top"] > .tabbar::after, .footer-md::before, .tabs-md[tabsPlacement="bottom"] > .tabbar::before {
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 5px;
    background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAHBAMAAADzDtBxAAAAD1BMV…h/TXEAAAAaSURBVAjXYxCEAgY4UIICBmMogMsgFLtAAQCNSwXZKOdPxgAAAABJRU5ErkJggg==);
    background-repeat: repeat-x;
    background-position: 0 -2px;
    content: "";
    background: none;
  }
  .footertext{
    div{
      padding-top: 2%;
      margin-top: 15%;
      color: #a0a0a0;
      margin: 0 auto;
      text-align: center;
      ion-label{
        // margin: 10px;
      }
    }
  }
  .footercode{
    background: #F2F2F2;
    width: 100%;
    padding-top: 0;
    height: 94%;
    img{
      float: left;
      padding:0 2% 2% 2%;
      width: 30%;
    }
    .coderight{
      width: 65%;
      float: right;
      padding: 0;
      p{
        margin: 0;
        padding: 0;
        font-size: 1.4rem;
      }
    }
  }
}
